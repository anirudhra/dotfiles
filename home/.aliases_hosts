# Servers
export PVESERVER="${NET1}.50"
export SBC="${NET1}.51"
export SBCWIFI="${NET1}.52"
#export SBC1="${NET3}.53"
#export SBCETH="${NET1}.54"

# LXC/VMs
export PVEJF="${NET1}.60"
export PVEVEGA="${NET1}.61"
export PVEBLANKA="${NET1}.62"
export PVWG="${NET1}.63"
export PVEHA="${NET1}.64"
export PVEUBUNTU="${NET1}.65"
export PVESAGAT="${NET1}.66"
export PVEKUMA="${NET1}.67"
export PVELMS="${NET1}.68"
export PVEIMM="${NET1}.69"

# Guest network hosts
export FRIDGE="${NET2}.15"

# iRobot
export ROOMBA="${NET2}.16"
