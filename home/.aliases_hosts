#!/bin/bash
## (c) Anirudh Acharya 2024, 2025
## useful aliases for Homelab hosts/ssh/etc; will be sourced by parent aliases

# Guard variable to ensure sourcing only once
if [ -n "${SOURCED_ALIASES_HOSTS}" ]; then
  return 0 # Exit the script if already sourced
fi

# Set the guard variable
SOURCED_ALIASES_HOSTS=1

debuglog "Hosts aliases sourced"

# constants
export ROUTERPORT="6666"
export ROUTERUSER="admin"

export SSHROOT="root"
export SSHNONROOT="nonroot"

export SSHTMUX="tmux -2 attach || tmux -2 new"
export SSHMAC="hmac-sha2-256"
export SBCHOST="ifc6410"
export PVEHOST="pve"

#subnets
export NET1="10.100.10"
# guest
export NET2="192.168.123"
# network#2
#export NET3="10.100.100"
# network#2 guest
#export NET4="192.168.4"
# usg
#export NET4="192.168.1"

# Routers
#export ROUTER="${NET3}.1"
export DDWRTROUTER="${NET1}.1"
#export USG="${NET5}.1"

# Clients
export GUILE="${NET1}.20"
export GUILELAN="${NET1}.21"
export KEN="${NET1}.22"
export KENLAN="${NET1}.23"
export RYULAN="${NET1}.24"
export RYU="${NET1}.25"

# Devices
export SOUNDBAR="${NET1}.26"
export PRINTER="${NET1}.30"
