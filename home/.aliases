# editor aliases
if [ -x "$(command -v nvim)" ]; then
  alias vi='nvim'
  alias vim='nvim'
  alias vis='nvim "+set si"'
  alias sudovi='sudo nvim'
  alias edit="nvim"
elif [ -x "$(command -v vim)" ]; then
  alias vi='vim'
  alias vis='vim "+set si"'
  alias sudovi='sudo vim'
  alias edit="vim"
else
  #failsafe, in almost every OS
  alias vi='nano'
  alias vim='nano'
  alias vis='nvim "+set si"'
  alias sudovi='sudo nano'
  alias edit="nano"
fi

